@using Forage.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Sign up";
}
     <div class="container">
      <div class="mx-auto bg-white shadow-sm p-4 position-relative rounded mt-5" style=" max-width: 400px;">
        <h3 class="mb-3 fs-2 text-center">Welcome Back!</h3>
        <p class="text-muted text-center mb-4">Please enter your credentials to login.</p>
        <form action='/login' method="POST"  novalidate class="needs-validation mb-4 login-form">
            <div class="form-group pb-3">
                <label class="small text-muted" for="username">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="username" required>
                <div class="invalid-feedback">Username cannot be blank</div>
            </div>

            <div class="form-group pb-4">
                <label class="small text-muted" for="password">Password</label>
                <input type="Password" class="form-control" id="password" name="password" placeholder="****************" required>
                <div class="invalid-feedback">Password cannot be blank.</div>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 d-flex justify-content-center btn-submit">
            <span>Login</span>
            </button>
        </form>

        <div class="small text-center"><span class="text-muted "> Don't have an account yet?</span> <a class="link text-center d-block" href="/register">Sign Up</a></div>
      </div>
     </div>

