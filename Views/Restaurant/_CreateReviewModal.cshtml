@model Forage.ViewModels.CreateReviewViewModel

<button
  type="button"
  class="btn btn-primary btn-sm"
  data-bs-toggle="modal"
  data-bs-target="#createReviewModal"
>
  Write a Review
</button>
<div
  class="modal fade"
  id="createReviewModal"
  tabindex="-1"
  aria-labelledby="createReviewModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createReviewModalLabel">Add a Review</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <form asp-action="CreateReview" method="post" asp-controller="Review">
        <div class="modal-body">
          <input asp-for="RestaurantId" type="hidden" />

          <div class="form-group mb-2">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
          </div>

          <div class="form-group mb-2">
            <label asp-for="Details">Details</label>
            <textarea
              asp-for="Details"
              class="form-control"
              rows="4"
            ></textarea>
            <span asp-validation-for="Details" class="text-danger"></span>
          </div>

          <div class="form-group mb-2">
            <label asp-for="Rating">Rating</label>
            <div class="d-flex align-items-center">
              @for (int i = 1; i <= 5; i++) {
              <div class="form-check form-check-inline">
                <input
                  asp-for="Rating"
                  type="radio"
                  value="@i"
                  id="rating-@i"
                  class="form-check-input"
                />
                <label class="form-check-label" for="rating-@i">
                  @for (int j = 1; j <= i; j++) {
                  <i class="bi bi-star-fill text-primary small"></i>
                  }
                </label>
              </div>
              }
            </div>
            <span asp-validation-for="Rating" class="text-danger"></span>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
